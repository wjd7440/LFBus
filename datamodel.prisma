type User {
  id: ID! @id
  userId: String! @unique
  authSecret: String
  password: String!
  needHelp: String
  equipment: String!
  memo: String
  deviceToken: String
  createdAt: DateTime @createdAt
}

type BusStation {
  BUS_NODE_ID: ID! @id
  BUS_STOP_ID: Int!
  BUSSTOP_NM: String!
  BUSSTOP_ENG_NM: String!
  GPS_LATI: Float!
  GPS_LONG: Float!
  BUSSTOP_SEQ: String
  BUSSTOP_TP: String
  ROAD_NM: String
  ROAD_NM_ADDR: String
  ROUTE_CD: Int
  TOTAL_DIST: Int
}

type BusInfo{
  BUS_TYPE: Int!
  CAR_REG_NO: ID! @id
  CHARACTER: Int!
  COMP_CD: Int!
  ROUTE_CD: Int!
  SEAT1: Boolean @default(value: false)
  SEAT2: Boolean @default(value: false)
}

type Reservation{
  id: ID! @id
  status: String
  CAR_REG_NO: String!
  ROUTE_NO: String!
  user: User! @relation(name: "ReservationOfUser")
  BUS_NODE_ID: Int!
  departureStation: String!
  arrivalStation: String!
  equipment: String
  memo: String
  createdAt: DateTime @createdAt
}